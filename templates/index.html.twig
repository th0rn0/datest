{% extends "layout.html.twig" %}

{% block content %}
 <div class="container">
    <header class="header clearfix">
      <nav>
        <ul class="nav nav-pills float-right">
          <li class="nav-item">
            <a class="nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
        </ul>
      </nav>
      <h3 class="text-muted">Skybet Test - js-tech-test</h3>
    </header>

    <main role="main">
    	<h1>Live Events</h1><small>display primary market</small>
    	<button class="btn btn-primary" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false" aria-controls="primarymarketDiv">Toggle Primary Markets</button>
    	<button class="btn btn-primary" type="button">Toggle Decimals/Fractions</button>
      	<div class="row marketing">
  			{% for event in events %}
				<div class="col-lg-12">
					<span class="pull-left">{{ event.startTime|date('H:i') }}</span>
					<a href="/football/{{ event.id }}">
						<h3>{{ event.name }}</h3>
					</a>
					<span class="pull-right">{{ event.scores.home }} - {{ event.scores.away }}</span>
					<div class="row collapse multi-collapse" name="primaryMarketDiv">
						<div class="col-lg-12">
							<h5>{{ event.primaryMarket.name }}</h5>
						</div>
						{% for outcome in event.outcomes %}
							<div class="col-lg-4 col-xs-4">
	      						{{ outcome.type }} - {{ outcome.price.decimal }} - {{ outcome.price.num }}/{{ outcome.price.den }}
	  						</div>
	      				{% endfor %}
      				</div>
					<hr>
				</div>
			{% endfor %}
        </div>
    </main>

    <footer class="footer">
      <p>&copy; 2017</p>
    </footer>
	</div>
{% endblock %}
